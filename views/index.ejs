<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quiz Timetable Generator</title>
    <!-- External Stylesheets -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.19/tailwind.min.css">
    <style>
                body {
            font-family: 'Poppins', sans-serif;
            margin: 0;
            padding: 0;
            height: 100vh;
          background: linear-gradient(to bottom, #fbc2eb, #a6c1ee);

 /* Gradient from dark blue to light blue */
            color: #fff; /* Default text color */
            display: flex;
            align-items: center;
            justify-content: center;
        }

        /* Background container styling */
        .background-container {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 100%;
            height: 100%;
        }


        body {
            font-family: 'Poppins', sans-serif;
        }

        /* Custom Styles for Background */
        .background-container {
            background-image: linear-gradient(rgba(0, 0, 0, 0.5),
                    rgba(0, 0, 0, 0.5)),
                url('https://source.unsplash.com/1600x900/?classroom,education');
            background-size: cover;
            background-position: center;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        /* Styling for the Card */
        .card {
            background: rgba(255, 255, 255, 0.9);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
            border-radius: 12px;
            padding: 2rem;
            text-align: center;
            max-width: 400px;
            width: 90%;
        }

        h1 {
            font-size: 2.5rem;
            font-weight: 600;
            color: #1d4ed8;
            /* Tailwind's blue-700 */
            margin-bottom: 1.5rem;
        }

        #generateButton {
            background: #1d4ed8;
            color: white;
            font-size: 1rem;
            font-weight: 600;
            padding: 0.75rem 1.5rem;
            border-radius: 8px;
            width: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: transform 0.2s ease-in-out, background-color 0.3s;
        }

        #generateButton:hover {
            background-color: #2563eb;
            /* Tailwind's blue-600 */
            transform: scale(1.05);
        }

        #generateButton:active {
            transform: scale(0.95);
        }

        /* Loader Animation */
        #generateButton.animate-pulse {
            animation: pulse 1s infinite;
        }

        @keyframes pulse {

            0%,
            100% {
                background-color: #1d4ed8;
            }

            50% {
                background-color: #2563eb;
            }
        }
    </style>
</head>

<body>
    
    <div class="background-container">
      
        <div class="card">
            <h1>Quiz Generator</h1>
            <img src="https://th.bing.com/th/id/OIP.Y8arVd3brhhD9GVU4SBEsAHaEt?w=279&h=180&c=7&r=0&o=5&dpr=1.3&pid=1.7" alt="">
            <button id="generateButton">
                <i class="fas fa-calendar-alt mr-2"></i> Generate Timetable
            </button>
        </div>
    </div>

    <script>
        const generateButton = document.getElementById('generateButton');
        let isGenerating = false;

        generateButton.addEventListener('click', () => {
            if (isGenerating) return;

            isGenerating = true;
            generateButton.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i> Generating...';
            generateButton.classList.add('animate-pulse');

            setTimeout(() => {
                isGenerating = false;
                generateButton.innerHTML = '<i class="fas fa-calendar-alt mr-2"></i> Generate Timetable';
                generateButton.classList.remove('animate-pulse');

                // Redirect to /teacher route after generating timetable
                window.location.href = '/teacher';
            }, 2000);
        });
    </script>
</body>

</html>
